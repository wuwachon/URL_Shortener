{{#if shortURL}}
<div class="mb-3 row" style="width: 65vmin;">
  <h3>Success! Please use this link!</h3>
  <a id="shortURL" href="/{{ shortURL }}">http://{{ host }}/{{ shortURL }}</a>
</div>
<div class="d-flex justify-content-center">
  <button class="btn btn-primary" id="copy-link" onclick="copyLink()">Copy</button>
</div>

<script>
  function copyLink() {
    const shortLink = document.querySelector('#shortURL').innerText
    navigator.clipboard.writeText(shortLink)
      .then(() => alert('Link was coppied!'))
      .catch(error => console.log(error))
  }
</script>
{{else}}
<form action="/" method="post">
  <div class="mb-3 row" style="width: 65vmin;">
    <input type="url" name="originURL" id="origin-url" class="form-control mt-5 fw-bold" placeholder="Put original URL here!" required>
  </div>
  <div class="d-flex justify-content-center">
    <button class="btn btn-success" type="submit">Shorten</button>
  </div>
</form>
{{/if}}